<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Location Maisons{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/5/flatly/bootstrap.min.css">

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}

        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}

        {% endblock %}


    </head>


   <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('maison') }}">Location Maison</a>

            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    {% if not app.user %}
                    <li class="nav-item">
                        <a class="nav-link " href="{{ path('maison') }}">Home
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>

                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link " href="{{ path('maison') }}">Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">House</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ path('addmaison') }}">Add</a>
                            <a class="dropdown-item" href="{{ path('listmaison') }}">List</a>
                            <a class="dropdown-item" href="{{ path('Maisonsearch') }}">Search</a>
                        </div>

                    {% endif %}

                </ul>


                <form class="d-flex">
                    {% if not app.user %}
                        <li class="nav-item">
                            <a class="nav-link " href="{{ path('security_login') }}">Login
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link " href="{{ path('security_logout') }}">Logout
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                    {% endif %}
                </form>

            </div>
        </div>
    </nav>
    <div class="container">
        {% block body %}  {% endblock %}
    </div>
</body>
</html>
